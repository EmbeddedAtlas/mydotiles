configuration {
  modes: [ combi ];
  combi-modes: [ window, drun, run ];
}

@theme "gruvbox-dark"
 
/* Insert theme modifications after this */

element {
  orientation: horizontal;
  children: [ element-text, element-icon ];
  spacing: 5px;
}

element-icon {
    size: 1.5em;
}

element-text {
    vertical-align: 0.5;
}

entry {
    placeholder: "...";
    cursor: pointer;
}
